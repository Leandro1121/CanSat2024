WindowManager:
    id: window_manager
 
    HomePage:
    GCSPage:
    AnalysisPage:

# ! ================= Homepage and Any dependencies =================
<HomePage>:

    name: "homepage"
    canvas.before:
        Rectangle:

            pos: self.pos
            size: self.size
            source: '../_static/bg4.jpeg'

    MDBoxLayout:

        MDNavigationRail:

            anchor: "center"
            type: "labeled"
            current_selected_item: 0

            MDNavigationRailItem:
                id: home_icon
                text: "Home"
                icon: "home"
                on_release:root.manager.current = "homepage"

            MDNavigationRailItem:
                id: home_icon
                text: "GCS"
                icon: "remote-desktop"
                on_release:root.manager.current = "gcs"

            MDNavigationRailItem:
                text: "ANYSIS"
                icon: "google-analytics"
                on_release: root.manager.current = "analysis"
        
        MDBoxLayout:
            orientation: "vertical"
            MDBoxLayout:
                orientation: "vertical"
                Label:
                    text: "Gator Team"
                    font_name: "graph"
                    font_size: 50
                MDBoxLayout:
                    orientation: "horizontal"
                    Label:
                        text:"Mission Desc"
            # TODO Homepage work here
                
                   
        

    MDScreen:

<GCSPage>:

    name: "gcs"
    canvas.before:
        Rectangle:

            pos: self.pos
            size: self.size
            source: '../_static/bg4.jpeg'
    MDBoxLayout:

        MDNavigationRail:

            anchor: "center"
            type: "labeled"

            MDNavigationRailItem:
                id: home_icon
                text: "Home"
                icon: "home"
                on_release:
                    root.manager.current = "homepage"
                    root.on_exit()

            MDNavigationRailItem:
                id: analysis_tool
                text: "ANYSIS"
                icon: "google-analytics"
                on_release:
                    root.on_exit() 
                    root.manager.current = "analysis"
                         
            MDNavigationRailItem:
                text: "Setup"
                icon: "cog"
                on_release: root.setup_dialog_func()
            
            MDNavigationRailItem:
                text: "Launch"
                icon: "rocket-launch"
                on_release: root.start_dialog_func()
                disabled: root.disable_tools

            MDNavigationRailItem:
                text: "CMD"
                icon: "send"
                on_release: root.optional_cmd_dialog_func()
                disabled: root.disable_tools

            MDNavigationRailItem:
                text: "CAL"
                icon: "cached"
                on_release: root.cal_dialog_func()
                disabled: root.disable_tools or root.cal_tool
            
            MDNavigationRailItem:
                text: "SIM"
                icon: "airplane"
                on_release: root.sim_dialog_func()
                disabled: root.disable_tools or root.sim_tool

            MDNavigationRailItem:
                text: "Audio"
                icon: "volume-high"
                on_release: root.audio()
                disabled: root.disable_tools or root.audio_tool

            MDNavigationRailItem:
                text: "Reset"
                icon: "restart"
                on_release: root.reset()
                disabled: root.disable_tools or root.reset_tool

        MDBoxLayout:

            orientation: "vertical"

            MDGridLayout:

                cols: 6
                rows: 2
                spacing: 0
                size_hint: 1, 0.1
                md_bg_color: 0, 0, 0, 0.7

                Label: 
                    id: mission_time_curr
                    text: "Mission Time:"
                    font_name: "graph"
                    text_color: "#FAF9F6"

                Label: 
                    id: mission_time_start
                    text: "Mission Time Start:"
                    font_name: "graph"
                    text_color: "#FAF9F6"
                    
                Label: 
                    id: packet_count
                    text: "Packet Count:"
                    font_name: "graph"
                    text_color: "#FAF9F6"
                    font_size: "14dp"

                Label: 
                    id: flight_mode
                    text: "Flight Mode:"
                    font_name: "graph"
                    text_color: "#FAF9F6"
                    font_size: "14dp"

                Label: 
                    id: flight_state
                    text: "Flight State:"
                    font_name: "graph"
                    text_color: "#FAF9F6"
                    font_size: "14dp"

                Label: 
                    id: sim_mode
                    text: "SIM Mode:"
                    font_name: "graph"
                    text_color: "#FAF9F6"
                    font_size: "14dp"
                
                Label: 
                    id: gps_time
                    text: "GPS Mission Time:"
                    font_name: "graph"
                    text_color: "#FAF9F6"

                Label: 
                    id: gps_sats
                    text: "GPS SATS:"
                    font_name: "graph"
                    text_color: "#FAF9F6"
                    font_size: "14dp"

                Label: 
                    id: pc_release
                    text: "PC Release:"
                    font_name: "graph"
                    text_color: "#FAF9F6"
                    font_size: "14dp"
                
                Label: 
                    id: hs_release
                    text: "HS Release:"
                    font_name: "graph"
                    text_color: "#FAF9F6"
                    font_size: "14dp"

                Label: 
                    id: cmd_echo
                    text: "CMD_ECHO:"
                    font_name: "graph"
                    text_color: "#FAF9F6"
                    font_size: "14dp"

                Label: 
                    id: status
                    text: "Status: {}".format("Not Ready")
                    font_name: "graph"
                    text_color: "#FAF9F6"
                    font_size: "14dp"
                

            MDProgressBar:
                id: progress
                pos_hint: {"center_y": .6}
                type: "indeterminate"
                value: 50
                size_hint: 1, 0.01
                # TODO: Connect progess bar to something
            
            MDBoxLayout:

                orientation: "vertical"
                size_hint: 1, 1
                padding: 0,1,0,10
                
                MDGridLayout:

                    cols: 2
                    rows: 1
                    spacing: 0, 0

                    MDBoxLayout:
                        
                        MDBoxLayout:
                            padding: "5dp"
                            orientation: "vertical"
                                    
                            MapView:

                                id: gps_map
                                zoom: 15      
                                lat: 29.6446
                                lon: -82.3535
                                double_tap_zoom: True
                                pause_on_action: True
                                size_hint: 1,1
                                on_touch_up: root.on_touch_up 

                            MDBoxLayout:
                                orientation: "horizontal"
                                size_hint_y: 0.1
                                Label:
                                    id: selected_loc
                                    text: "Selected Location: "
                                    font_name: "graph"
                                Label:
                                    id: current_loc
                                    text: "Payload Location: "
                                    font_name: "graph"
                       
                        MDBoxLayout:
                            orientation: "vertical"

                            ScrollView:
                                id: scroll_alt
                                do_scroll_x: True
                                do_scroll_y: False
                                scroll_type: ['content']
                                bar_width: 4
                                bar_color: 1,1,1,1
                            
                                MDBoxLayout:
                                    id: alt_cont
                                
                                    Graph:

                                        id: alt
                                        ylabel: "Altitude (m)"
                                        xmin:0
                                        xmax: root.x_max
                                        ymin: 0
                                        ymax: 700
                                        border_color: 0, 1, 1, 1
                                        tick_color: 0,1,1,0.7
                                        x_grid: True
                                        y_grid: True
                                        draw_border: True
                                        x_grid_label: True
                                        y_grid_label: True
                                        x_ticks_major: root.x_max/4
                                        y_ticks_major: 100
                                        x_ticks_minor: 2
                                        y_ticks_minor: 5
                                        background_color: 0,0,0,0.7
                                        label_options: {'font_name': "graph"}
                                        

                            MDBoxLayout:
                                orientation: "horizontal"
                                size_hint: 1, 0.05
                                md_bg_color: 0,0,0,0.7

                                MDIconButton:
                                    icon: "plus-box"
                                    size_hint: 0.1, 1
                                    icon_size: "24sp"
                                    theme_icon_color: "Custom"
                                    icon_color: "#FAF9F6"
                                    on_release: root.alt_zoom("+")
                                
                                Label:
                                    id: label_alt
                                    text: "Time (sec) - ({}x)".format(1)
                                    font_name: "graph"

                                MDIconButton:
                                    icon: "minus-box"
                                    size_hint: 0.1, 1
                                    icon_size: "24sp"
                                    theme_icon_color: "Custom"
                                    icon_color: "#FAF9F6"
                                    on_release: root.alt_zoom("-")
                
                MDGridLayout:

                    cols: 3
                    rows: 1
                    spacing: 0,0

                    MDBoxLayout:
                        orientation: "vertical"
                        ScrollView:
                            id: scroll_air_speed
                            do_scroll_x: True
                            do_scroll_y: False
                            #size_hint: 1, 0.5
                            scroll_type: ['content']
                            bar_width: 4
                            bar_color: 1,1,1,1

                            MDBoxLayout:
                                id: air_speed_cont
                            
                                Graph:
                                    id: air_speed
                                    ylabel: "Air Speed (m/s)"
                                    xmin:0
                                    xmax: root.x_max
                                    ymin: 0
                                    ymax: 400
                                    border_color: 0, 1, 1, 1
                                    tick_color: 0,1,1,0.7
                                    x_grid: True
                                    y_grid: True
                                    draw_border: True
                                    x_grid_label: True
                                    y_grid_label: True
                                    x_ticks_major: root.x_max/4 
                                    y_ticks_major: 100
                                    x_ticks_minor: 2
                                    y_ticks_minor: 3
                                    background_color: 0,0,0,0.7
                                    label_options: {'font_name': "graph"}
                                   
                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint: 1, 0.05
                            md_bg_color: 0,0,0,0.7

                            MDIconButton:
                                icon: "plus-box"
                                size_hint: 0.1, 1
                                icon_size: "24sp"
                                theme_icon_color: "Custom"
                                on_release: root.air_speed_zoom("+")
                            
                            Label:
                                id: label_air_speed
                                text: "Time (sec) - ({}x)".format(root.zoom_air_speed)
                                font_name: "graph"

                            MDIconButton:
                                icon: "minus-box"
                                size_hint: 0.1, 1
                                icon_size: "24sp"
                                theme_icon_color: "Custom"
                                on_release: root.air_speed_zoom("-")

                    
                    MDGridLayout:
                        cols: 1
                        rows: 4

                        MDBoxLayout:
                        
                            ScrollView:
                                id: scroll_voltage
                                do_scroll_x: True
                                do_scroll_y: False
                                #size_hint: 1, 0.5
                                scroll_type: ['content']
                                bar_width: 4
                                bar_color: 1,1,1,1

                                MDBoxLayout:
                                    id: voltage_cont
                                
                                    Graph:
                                        id: voltage
                                        ylabel: "Voltage (V)"
                                        xmin:0
                                        xmax: root.x_max
                                        ymin: 3
                                        ymax: 7
                                        border_color: 0, 1, 1, 1
                                        tick_color: 0,1,1,0.7
                                        x_grid: True
                                        y_grid: True
                                        draw_border: True
                                        x_grid_label: True
                                        y_grid_label: True
                                        x_ticks_major: root.x_max/4 
                                        y_ticks_major: 1
                                        x_ticks_minor: 2
                                        y_ticks_minor: 3
                                        background_color: 0,0,0,0.7
                                        label_options: {'font_name': "graph"}

                        # MDBoxLayout:
                        #     orientation: "horizontal"
                        #     size_hint: 1, 0.05
                        #     md_bg_color: 0,0,0,0.7

                        #     MDIconButton:
                        #         icon: "plus-box"
                        #         size_hint: 0.1, 1
                        #         icon_size: "24sp"
                        #         theme_icon_color: "Custom"
                        #         on_release: root.voltage_zoom("+")
                            
                        #     Label:
                        #         id: label_voltage
                        #         text: "Time (sec) - ({}x)".format(1)
                        #         font_name: "graph"

                        #     MDIconButton:
                        #         icon: "minus-box"
                        #         size_hint: 0.1, 1
                        #         icon_size: "24sp"
                        #         theme_icon_color: "Custom"
                        #         on_release: root.voltage_zoom("-")

                        MDBoxLayout:
                            orientation: "vertical"

                            ScrollView:
                                id: scroll_temp

                                do_scroll_x: True
                                do_scroll_y: False
                                scroll_type: ['content']
                                bar_width: 4
                                bar_color: 1,1,1,1

                                MDBoxLayout: 

                                    id: temp_cont

                                    Graph:
                                        id:temp
                                        ylabel: "Temperature (C)"
                                        xmin:0
                                        xmax: root.x_max
                                        ymin: 0
                                        ymax: 32
                                        border_color: 0, 1, 1, 1
                                        tick_color: 0,1,1,0.7
                                        x_grid: True
                                        y_grid: True
                                        draw_border: True
                                        x_grid_label: True
                                        y_grid_label: True
                                        x_ticks_major: root.x_max/4
                                        x_ticks_minor: 5
                                        y_ticks_major: 8
                                        y_ticks_minor: 4
                                        background_color: 0,0,0,0.7
                                        label_options: {'font_name': "graph"}
                            MDBoxLayout:
                                orientation: "horizontal"
                                size_hint: 1, 0.05
                                md_bg_color: 0,0,0,0.7

                                MDIconButton:
                                    icon: "plus-box"
                                    size_hint: 0.1, 1
                                    icon_size: "24sp"
                                    theme_icon_color: "Custom"
                                    on_release: root.temp_zoom("+"), root.voltage_zoom("+")
                                                
                                
                                Label:
                                    id: label_temp
                                    text: "Time (sec) - ({}x)".format(root.zoom_temp)
                                    font_name: "graph"

                                MDIconButton:
                                    icon: "minus-box"
                                    size_hint: 0.1, 1
                                    icon_size: "24sp"
                                    theme_icon_color: "Custom"   
                                    on_release: root.temp_zoom("-"), root.voltage_zoom("-")
                    MDBoxLayout:
                        orientation: "vertical"

                        ScrollView:
                            id: scroll_gyro
                            do_scroll_x: True
                            do_scroll_y: False
                            scroll_type: ['content']
                            bar_width: 4
                            bar_color: 1,1,1,1
                        
                            MDBoxLayout:
                                id: gyro_cont
                            
                                Graph:

                                    id: gyro
                                    ylabel: "Degrees N"
                                    xmin:0
                                    xmax: root.x_max
                                    ymin: -180
                                    ymax: 180
                                    border_color: 0, 1, 1, 1
                                    tick_color: 0,1,1,0.7
                                    x_grid: True
                                    y_grid: True
                                    draw_border: True
                                    x_grid_label: True
                                    y_grid_label: True
                                    x_ticks_major: root.x_max/4
                                    y_ticks_major: 90
                                    x_ticks_minor: 2
                                    y_ticks_minor: 5
                                    background_color: 0,0,0,0.7
                                    label_options: {'font_name': "graph"}
                                    

                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint: 1, 0.05
                            md_bg_color: 0,0,0,0.7

                            MDIconButton:
                                icon: "plus-box"
                                size_hint: 0.1, 1
                                icon_size: "24sp"
                                theme_icon_color: "Custom"
                                icon_color: "#FAF9F6"
                                on_release: root.gyro_zoom("+")
                            
                            Label:
                                id: label_gyro
                                text: "Time (sec) - ({}x)".format(1)
                                font_name: "graph"

                            MDIconButton:
                                icon: "minus-box"
                                size_hint: 0.1, 1
                                icon_size: "24sp"
                                theme_icon_color: "Custom"
                                icon_color: "#FAF9F6"
                                on_release: root.gyro_zoom("-")
    MDScreen:
# ! Tools
<ItemConfirm>

    on_release: root.set_icon(check)
    CheckboxLeftWidget:
        id: check
        group: "check"

<Content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "90dp"

    MDTextField:
        id: command_field
        hint_text: "CMD,{},<COMMAND>,<ITEM>".format("1071")

<CustomDataTable>:
# ! ------------------------------------------

<AnalysisPage>:
    name: "analysis"
    canvas.before:
        Rectangle:

            pos: self.pos
            size: self.size
            source: '../_static/bg4.jpeg'
    MDBoxLayout:

        MDNavigationRail:

            anchor: "center"
            type: "labeled"

            MDNavigationRailItem:
                id: home_icon
                text: "Home Page"
                icon: "home"
                on_release:root.manager.current = "homepage"

            MDNavigationRailItem:
                text: "GCS"
                icon: "remote-desktop"
                on_release:root.manager.current = "gcs"          
            MDNavigationRailItem:
                text: "Import"
                icon: "import"
                on_release: root.file_manager_open()

        MDBoxLayout:
            id: main_layout
            orientation: "horizontal"
            spacing: '10dp'
    MDScreen: